<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgwlcm"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/loadingcmplt"
        android:layout_marginBottom="15dp"
        android:id="@+id/anim1"
        >

        <TextView
            android:id="@+id/self"
            android:textColor="@color/lightorange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaSelf"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textStyle="bold"
            />
        <TextView
            android:textColor="@color/lightorange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like My Name"
            android:layout_below="@+id/self"
            android:layout_marginTop="-14dp"
            android:layout_centerHorizontal="true"
            android:textSize="19.8sp"/>

      </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/loadingcmplt"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_above="@+id/progressbar"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="Let's Start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-17dp"
        android:onClick="mulai"
        android:textColor="#ec4137"
        android:background="@drawable/bordertxt"
        android:textSize="20sp"
        android:visibility="invisible" />
</RelativeLayout>